// Two pointer approach.



class Solution {
public:
    vector<int> sortArrayByParity(vector<int>& nums) {
        int n = nums.size();
        vector<int>ans(n);
        int a= n-1;
        int b=0;

        for(int i =0; i<n; i++){
            if(nums[i]%2==0){
                ans[b]=nums[i];
                b++;
            }
            else{
                ans[a]= nums[i];
                a--;
            }


        }
        return ans;
        
    }
};
